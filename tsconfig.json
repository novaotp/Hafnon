{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "Bundler",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["ES2023"],
        "module": "ES2022",
        "target": "ES6",
        "outDir": "build",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@compilation/*": ["src/compilation/*"],
        }
    }
}